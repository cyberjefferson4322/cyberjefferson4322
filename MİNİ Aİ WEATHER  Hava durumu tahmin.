//PYTHON  LİCANCE

sıcaklık =int(input("Anka: Yiğit bey hava sıcaklığını girermisiniz?"))
 
if sıcaklık >= 24  :
    print(f"Anka: Hava güneşli veya parçalı bulutlu Yiğit Bey.  BB B   or  -Ğ-    :")
    print(f"Anka: Hava sıcak Yiğit Bey:")
elif sıcaklık <= 24 and sıcaklık >= 0  :
    print(f"Anka:  hava  bulutlu veya yağmurlu Yiğit Bey . BBBBBB OR < ||||||")
    print(f"Anka: hava ılık Yiğit bey")
else:
    print(f"Anka: hava yağışlı veya karlı. *.*.*.*  or |||| ")
    print(f"Anka: hava soğuk yiğit bey")
